<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#C2FFC9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/monanngon"
            android:id="@+id/imgallfood"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        
        <RelativeLayout
            android:id="@+id/relativeall"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgallfood"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:id="@+id/linearall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:textSize="25sp"
                    android:id="@+id/tvtenallfood"
                    android:text="Tên món ăn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvgiaallfood"
                android:textStyle="italic"
                android:text="giá"
                android:layout_below="@+id/linearall"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/imgdelall"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_del"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <ImageView
            android:id="@+id/imgeditall"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/imgdelall"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>