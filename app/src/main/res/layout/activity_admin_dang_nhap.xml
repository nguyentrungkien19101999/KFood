<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AdminDangNhapActivity">

    <TextView
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:text="Chức năng này chỉ dành cho Admin/Chủ cửa hàng. Nếu bạn là Admin vui lòng đăng nhập để thực hiện chức năng này. Nếu bạn không phải là Admin nhấn BACK để trở lại."
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/edtenadmin"
        android:ems="10"
        android:hint="Tên đăng nhập"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:gravity="center"
        android:id="@+id/edpassword"
        android:ems="10"
        android:hint="Mật khẩu"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btndangnhap"
        android:layout_marginTop="20sp"
        android:text="Đăng Nhập"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>